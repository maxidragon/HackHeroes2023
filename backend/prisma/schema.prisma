// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model User {
  id            Int      @id @default(autoincrement())
  email         String   @unique
  username      String?
  password      String
  loginID       Int?
  restURL       RestURL? @relation(fields: [restURLId], references: [id])
  restURLId     Int?
  certificate   String?
  fingerprint   String?
  privateKey    String?
  firebaseToken String?
}

model RestURL {
  id    Int    @id @default(autoincrement())
  url   String @unique
  users User[] @relation()
}
